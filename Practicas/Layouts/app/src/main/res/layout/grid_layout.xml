<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2">

    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:background="#ff0000"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Celda1"/>

    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:background="#00ff00"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="Celda2"/>

    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:background="#0000ff"
        android:layout_row="0"
        android:layout_column="1"
        android:text="Celda3"/>

</GridLayout>

<!-- este layout permite definir unas columnas y unas filas y añadir los elementos por coordenadas
o si le indicamos orientation los irá poniendo según dicha propiedad
tienen peso tanto por columnas como por filas
-->